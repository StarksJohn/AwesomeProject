{
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "jsx": "react",
    "lib": ["es6"],
    "moduleResolution": "node",
    "noEmit": true,
    "strict": true,
    "target": "esnext",
    "baseUrl": "./",
    "paths": {
      "*": ["src/*"],
      "~/*": ["src/*"],
      "~components": ["src/components"],
      "~api": ["src/api"],
      "~dva": ["src/dva"],
      "~react_intl": ["src/react_intl"],
      "~context": ["src/context"],
      "~routes": ["src/routes"],
      "~useHooks": ["src/useHooks"],
      "~constant": ["src/constant"],
      "~pages": ["src/pages"],
      "~style": ["src/style"],
      "~res": ["src/res"]
    },
    "skipLibCheck": true /* 忽略所有的声明文件（ *.d.ts）的类型检查。 */
  },
  "exclude": [
    "node_modules",
    "babel.config.js",
    "metro.config.js",
    "jest.config.js"
  ]
}
